<script>
    function toggleSidebar() {
        var sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("active");
    }
    
    document.getElementById('addButton').addEventListener('click', function() {
        window.location.href = 'add_product.html'; // Redirect to add product page
    });

    // Search Functionality
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.querySelector(".search-container input");
        const tableBody = document.getElementById("productBody");
        const tableRows = document.querySelectorAll("#productBody tr");

        // Create "No Data" row
        const noDataRow = document.createElement("tr");
        noDataRow.innerHTML = `<td colspan="8" style="text-align: center; color: red;">No data to show</td>`;
        noDataRow.style.display = "none";
        tableBody.appendChild(noDataRow);

        searchInput.addEventListener("keyup", function () {
            const filter = searchInput.value.toLowerCase();
            let hasMatch = false;

            tableRows.forEach(row => {
                const category = row.cells[0].textContent.toLowerCase();
                const name = row.cells[1].textContent.toLowerCase();
                const description = row.cells[2].textContent.toLowerCase();

                if (category.includes(filter) || name.includes(filter) || description.includes(filter)) {
                    row.style.display = "";
                    hasMatch = true;
                } else {
                    row.style.display = "none";
                }
            });

            // Show "No Data" message if no matches found
            noDataRow.style.display = hasMatch ? "none" : "";
        });
    });
</script>

